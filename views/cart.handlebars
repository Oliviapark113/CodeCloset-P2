<div id="cart" class="container">
  <div class="checkout-summary">
    <div class="checkout-summary-title">
      <h5>Your Order</h5>
      <h5> Items</h5>
    </div>
    {{#each this.allItems}}
 

    <div class="checkout-summary-item">
      <img src="{{this.imgFileName}}" height="150" width="100">
      <div class="item-name">
        <p>{{this.item}}</p>
        <p><span class="title">Color:{{this.color}}</span></p>
        <p><span class="title">Size:{{this.size}}</span></p>
      </div>
      <div class="item-price">
        <p class="title">$<span>{{this.price}}</span></p>
        <button class="remove" data-id="{{this.id}}">Remove</button>
        <br>
        <button class="edit" data-id="{{this.id}}"> Edit</button>
      </div>
    </div>

    {{/each}}
    <div class="checkout-summary-details">
      <div class="left">
        <p><strong>Subtotal:${{this.price}}</strong></p>

        <p><strong>Total:${{this.price}}</strong></p>
      </div>
      <div class="right">

      </div>
    </div>
    <button class="button expanded">Finish Order</button>
  </div>
</div>

